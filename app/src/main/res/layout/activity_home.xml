<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_home_style"
        android:foregroundTint="@color/Link"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/Link"
                android:contentDescription="@string/icon"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_logout" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:minHeight="80dp"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/your_balance"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/balanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_balance"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/refreshButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@color/Link"
                    android:contentDescription="@string/icon"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_refresh" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@color/Link"
                    android:contentDescription="@string/icon"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_top_up" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@color/Link"
                    android:contentDescription="@string/icon"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_transfer" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@color/Link"
                    android:contentDescription="@string/icon"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_finance" />

            </LinearLayout>

        </HorizontalScrollView>

        <ProgressBar
            android:id="@+id/progressBarHome"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:visibility="gone" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/plnButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_pln" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/pln"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/pulsaButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_pulsa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/pulsa"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/tvButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_tv_kabel" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/tv_kabel"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/pulsaPSCButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_pulsa_pascbayar" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/pulsa_pascabayar"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/goPayButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_gopay" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/go_pay"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/grabButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_grab" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/grab"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ovoButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_grab" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/ovo"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/danaButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_dana" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/dana"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/eMoneyMandiriButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_emoney" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/e_money_mandiri"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/tabCashBNIButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_tap_cash" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/tab_cash_bni"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/financeButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_angsuran" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/credit"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/moreButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/button_default"
                        android:contentDescription="@string/button_image_product"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_more" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/more"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>