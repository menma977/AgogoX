<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ppob.pulsa.PulsaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/phone_number"
            android:textColor="@color/textPrimaryDark"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phoneTargetEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="@string/phone_number"
            android:background="@drawable/edit_text_custom"
            android:ems="10"
            android:hint="@string/phone_number_example"
            android:inputType="phone"
            tools:targetApi="o" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pulsaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_info"
                android:elevation="20dp"
                android:text="@string/package_pulsa"
                android:textColor="@color/textPrimary" />

            <Button
                android:id="@+id/dataButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:elevation="20dp"
                android:text="@string/package_data"
                android:textColor="@color/textPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_default"
                android:elevation="20dp"
                android:text="paket data 20GB minght 5GB Telfon 20Menit"
                android:textColor="@color/colorSecondary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_default"
                android:elevation="20dp"
                android:text="paket data 20GB minght 5GB Telfon 20Menit"
                android:textColor="@color/colorSecondary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_default"
                android:elevation="20dp"
                android:text="paket data 20GB minght 5GB Telfon 20Menit"
                android:textColor="@color/colorSecondary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_default"
                android:elevation="20dp"
                android:text="paket data 20GB minght 5GB Telfon 20Menit"
                android:textColor="@color/colorSecondary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_default"
                android:elevation="20dp"
                android:text="paket data 20GB minght 5GB Telfon 20Menit"
                android:textColor="@color/colorSecondary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_default"
                android:elevation="20dp"
                android:text="paket data 20GB minght 5GB Telfon 20Menit"
                android:textColor="@color/colorSecondary" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>